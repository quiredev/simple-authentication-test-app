doctype html
html(lang="en")
  head
    title Test | #{title}
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/bootstrap.min.css")
    //[if lt IE 9]><script src="js/html5shiv.min.js"></script><![endif]
  body(style="padding-top: 70px;")
    header.navbar.navbar-default.navbar-fixed-top(role="banner")
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Simple Test App
        nav#navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li(class=isHome ? "active" : "")
              a(href="/home") Home
            li(class=isAbout ? "active" : "")
              a(href="/about") About
          if !user
            div.btn-group.navbar-right
              if !isSignUp
                a.btn.btn-primary.navbar-btn(href="/signup" role="button") Sign Up
              if !isSignIn
                a.btn.btn-default.navbar-btn(href="/signin" role="button") Sign In
          else
            div.btn-group.navbar-right
              a.btn.btn-primary.navbar-btn(href="/profile" role="button")
                span.glyphicon.glyphicon-user(aria-hidden="true" style="margin-right: 12px;")
                span= user.username
              a.btn.btn-default.navbar-btn(href="/signout" role="button") Sign Out
    main.container
      block content
    block modal
    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.min.js")